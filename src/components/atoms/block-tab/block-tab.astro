---
import './style.scss';

const {
  title,
  content,
  contentColor,
  backgroundColor
} = Astro.props;
---

<div class="block-tab absolute overflow-hidden top-[100vh] -translate-y-full left-0 w-full grid grid-cols-12 gap-x-2 md:gap-x-3 px-5 md:px-12 items-end">
    <div class={`block-tab-inner relative col-span-8 md:col-span-6 grid items-end grid-cols-8 md:grid-cols-6 gap-x-2 md:gap-x-3 bg-${backgroundColor} pt-6 md:pt-[52px] pl-5 md:pl-12 -ml-5 md:-ml-12`}>
        <div class="block-tab-text col-start-3 md:col-start-3 col-span-6 md:col-span-3">
            <h6 class="block-tab-title pb-3 md:pb-6 font-mono text-white uppercase">{title}</h6>
            <p class=`block-tab-content text-${contentColor} font-main font-light`>{content}</p>
        </div>
    </div>
</div>
