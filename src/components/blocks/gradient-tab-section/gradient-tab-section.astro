---
import './style.scss';

const {
  bgColor
} = Astro.props;
---

<section class=`tab-section overflow-x-clip bg-${bgColor || 'light'}`>
    <div class="tab-container relative z-10">
      <div class="tab absolute bottom-full h-[70px] md:h-[280px] left-0 w-full flex -z-10">
          <div class="tab-square"></div>
          <div class="tab-triangle"></div>
      </div>

      <slot />
      
    </div>
</section>