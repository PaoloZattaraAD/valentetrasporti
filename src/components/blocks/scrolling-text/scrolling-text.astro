---
import './style.scss';

import Button from '@/components/atoms/button/button.astro';

const {
    content,
    hasTab,
    bgColor,
    headerLight = false,
    ctaLabel = '',
    ctaUrl = '',
    ctaStyle = 'primary'
} = Astro.props;

const splitContent = content.split(/\s+/);
---
<section class=`scrolling-text relative bg-${bgColor} ${headerLight ? 'header-light' : 'header-dark'} z-10`>
    <div class="grid-container">
        <div class=`content col-start-3 col-end-12 pb-[160px] ${hasTab ? 'max-md:pt-6 md:-mt-[120px]' : 'md:pt-[160px]'}`>
            <div class="content-text flex flex-wrap gap-x-3 md:gap-x-6 pt-4 md:pt-0 pb-14 md:pb-20">
                {splitContent.map((word, id) => (
                    <span 
                    class="h1 text-white"
                    >
                    {word}
                    </span>
                ))}
            </div>

            {ctaUrl != '' && (
                <Button
                    label={ctaLabel}
                    url={ctaUrl}
                    style={ctaStyle}
                />
            )}
        </div>
    </div>
</section>