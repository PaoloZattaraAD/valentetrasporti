<Layout
  title="Astro Tailwind - Servizi"
  description="Scopri la nostra gamma completa di servizi di trasporto e logistica."
  activeLink="servizi">

  <PageIntro
    headerColor="light"
    bgImage={introImg}
    bgImageMobile={introImgMobile}
  />

  <ScrollingText 
    content="Da sempre il fiore all'occhiello dell'azienda, il carico completo ne rappresenta il core business."
    contentColor="dark"
    hasTab={false}
    headerColor="dark"
    bgColor="light"
  />

  <BlockTab 
    title="Trasporto merci"
    titleColor="dark"
    content="Trasporti a carico completo"
    contentColor="red"
    backgroundColor="light"
  />

  <ServiceIntro 
    framedContent={introFramedContent}
  />

  <ImageBlock
    backgroundImage={expandingImg}
    backgroundImageAlt="expanding-image"
    headerColor="dark"
    hasTopFade={false}
    expanding="true"
    bottomSpaceColor="light"
  />
  
  <SimpleText
    bgColor="light"
    title="Caratteristiche"
    content="Con il servizio bilici si effettuano molteplici tipologie di trasporto merci: pallet, macchinari, carpenteria, tavole…fino ad un peso massimo di 300 quintali."
    ctaLabel="Richiedi un preventivo"
    ctaUrl="#"
    ctaStyle="primary-variant"
  />

  <VehicleInspector 
    vehicles={vehicles}
  />

  <Slider
    imageOnly={true}
    slides={slides}
  />

  <Services
    services={services}
  />
</Layout>
