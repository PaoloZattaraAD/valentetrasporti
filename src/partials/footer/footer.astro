<footer class="bg-transparent z-10 bg-white">
  <figure class="absolute -z-10 w-full">
    <Image src={footerBg} alt="footer-bg" class="w-full"/>
  </figure>
  <div class="footer-inner pt-12 md:pt-20 pb-[52px] md:pb-[100px] px-5 md:px-12 flex flex-col gap-y-20 md:gap-y-[120px]">
    <div class="footer-top grid-container max-md:!flex flex-col">
      <Image src={logoLight} alt="logo" class='col-span-3 logo-light w-[110px] md:w-[216px] h-[15px] md:h-[30px] max-md:mb-12'/>
      <div class="column col-span-3 text-white max-md:mb-6">
        <p class="small-paragraph mb-2">Via dell'Elettronica, 10 - 36016 Thiene (VI)</p>
        <p class="small-paragraph">Lun - Sab : 8.00 - 20.00</p>
      </div>
      <div class="column col-span-3 text-white">
        <p class="small-paragraph">info@valentetrasporti.com</p>
        <p class="">+39 0445 361191</p>
      </div>
    </div>

    <div class="footer-mid grid-container max-md:!flex flex-wrap gap-x-2 gap-y-12">
      {
        footerMidMenu.map((menu) => (
          <div class="column col-span-3 text-white max-md:w-[calc(50%-4px)]">
            <p class="button-text font-button uppercase opacity-30 !mb-6 md:!mb-10">{menu.title}</p>
            <div class="content flex flex-col gap-y-2">
              {
                menu.content.map((content) => (
                  <a href={content.url} class="small-paragraph">{content.label}</a>
                ))
              }
            </div>
          </div>
        ))
      } 
    </div>

    <div class="footer-bottom grid-container text-white opacity-30 max-md:!flex flex-wrap gap-y-4">
